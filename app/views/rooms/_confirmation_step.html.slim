.show-image
  = f.label :image, class: "col-form-label"

  = f.fields_for :room_images do |builder|
    .nested-fields
      - if builder.object.image?
        = image_tag builder.object.image.thumb.url, class: "thumb-image"
        = link_to_remove_association "", builder, class: "nested-image btn"
  = f.file_field :image, multiple: true, name: "room_images[image][]", class: "form-control preview-image", presence: true
  #preview

.form-checbox
  = f.label :utilities, class: "col-form-label"
  = f.collection_check_boxes(:utility_ids, set_utilities, :id, :name, presence: true) do |u|
    label.check-box-utility
      = u.label()
      = u.check_box()
      .checkmark
        = content_tag(:div, "")
